# -*- ruby -*-
require 'rubygems'
require 'hoe'
require File.dirname(__FILE__) + "/lib/sequencer"

Hoe::RUBY_FLAGS.gsub!(/^-w/, '')
Hoe.spec 'sequencer' do | s |
  s.readme_file   = 'README.rdoc'
  s.extra_rdoc_files  = FileList['*.rdoc']
  s.developer('Julik Tarkhanov', 'me@julik.nl')
end

